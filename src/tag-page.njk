---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - blog
    - teams
permalink: /tags/{{ tag | slug }}/
layout: base.njk
eleventyComputed:
  title: "Topic: {{ tag }}"
---

<div class="container" style="max-width: 800px; margin-top: 40px;">
    
    <header style="text-align: center; margin-bottom: 50px;">
        <h4 style="color: var(--f1-red); text-transform: uppercase; letter-spacing: 2px;">Topic</h4>
        <h1 style="font-size: 3rem;">{{ tag }}</h1>
        <a href="/blog/" style="color: #888; text-decoration: none;">&larr; View All News</a>
    </header>

    <div class="grid-3">
        {# Loop through only the posts containing this specific tag #}
        {% for post in collections[tag] | reverse %}
        
        <div class="card" style="display: flex; flex-direction: column;">
            {% if post.data.image %}
            <div style="height: 180px; overflow: hidden; border-radius: 8px; margin-bottom: 15px;">
                <img src="{{ post.data.image }}" alt="{{ post.data.title }}" style="width: 100%; height: 100%; object-fit: cover;">
            </div>
            {% endif %}
            
            <h3 style="margin-top: 0;">
                <a href="{{ post.url }}" style="text-decoration: none; color: white;">{{ post.data.title }}</a>
            </h3>
            
            <div style="margin-top: auto; padding-top: 15px;">
                <span style="font-size: 0.8rem; color: var(--f1-red);">{{ post.date | date }}</span>
            </div>
        </div>

        {% endfor %}
    </div>
</div>